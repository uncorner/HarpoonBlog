@model Harpoon.Application.Backend.ViewModels.EditProfileForm
@{
    ViewBag.Title = "Редактирование профиля пользователя";
}

<div class="form-box">

@using (Html.BeginForm()) {
    <fieldset>
        <legend>@ViewBag.Title</legend>

        @Html.ExtValidationSummary()
        @Html.FlashMessage()

        <div class="form-row">
            <div class="editor-label">
                @Html.ExtLabelFor(model => model.Title)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="form-row">
            <div class="editor-label">
                @Html.ExtLabelFor(model => model.Subject)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Subject)
                @Html.ValidationMessageFor(model => model.Subject)
            </div>
        </div>

        <div class="form-row">
            <div class="editor-label">
                @Html.ExtLabelFor(model => model.FooterText)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.FooterText)
                @Html.ValidationMessageFor(model => model.FooterText)
            </div>
        </div>

        <div class="form-row">
            <div class="editor-label">
                @Html.ExtLabelFor(model => model.Name)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-row">
            <div class="editor-label">
                @Html.ExtLabelFor(model => model.Email)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="submit-button">
            <input type="submit" value="Сохранить" />
        </div>
    </fieldset>
}

</div>



