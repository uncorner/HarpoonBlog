@model Harpoon.Application.Backend.ViewModels.LogonForm

@{
    Layout = null;
    ViewBag.Title = "Вход";
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="shortcut icon" href="@Url.Content("~/Content/images/favicon.ico")" />
    <link href="@Url.Content("~/Content/core.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/harpoon-backend.less")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <title>@Html.BackendPageTitle()</title>
</head>
<body>
    <div id="auth-form-layout">
        <div id="auth-form-container">
            <div id="auth-form-box">
                @using (Html.BeginForm())
                {
                    <div id="auth-form-inner-box">
                        @Html.ExtValidationSummary(false)
                        @Html.Label("Password", "Введите пароль")
                        <div>
                            @Html.EditorFor(model => model.Password)
                            <input class="submit-button" type="submit" value="Войти" />
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
