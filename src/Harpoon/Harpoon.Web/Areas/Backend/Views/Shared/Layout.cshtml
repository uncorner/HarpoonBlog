@using StackExchange.Profiling;

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="shortcut icon" href="@Url.Content("~/Content/images/favicon.ico")" />
    <link href="@Url.Content("~/Content/core.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/harpoon-backend.less")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/harpoon-common.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/harpoon-backend.js")" type="text/javascript"></script>
    <title>@Html.BackendPageTitle()</title>
</head>
<body>

    <div id="layout">
        <div id="layout-header">
            <span id="header-title">Панель управления контентом</span>
            <span id="logout-link">
                @Html.ActionLink("Выход", "Logoff", "Auth")
                <span>→</span>
            </span>
        </div>
        <div id="layout-middle">
            <table class="tuned-table" id="layout-middle-box">
                <tr>
                    <td id="layout-sidebar">
                        @Html.BackendMenu()
                    </td>
                    <td id="layout-content">
                        <div>
                            @RenderBody()
                        </div>
                    </td>
                </tr>
            </table>
        </div>
        <div id="layout-footer">
            @Html.Partial("Powered")
        </div>
    </div>
    <!-- profiler scope -->
    @MiniProfiler.RenderIncludes()
</body>
</html>
